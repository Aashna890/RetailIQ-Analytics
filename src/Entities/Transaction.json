{
  "name": "Transaction",
  "type": "object",
  "properties": {
    "transaction_id": {
      "type": "string",
      "description": "Unique transaction identifier"
    },
    "customer_id": {
      "type": "string",
      "description": "Reference to customer ID"
    },
    "customer_name": {
      "type": "string",
      "description": "Customer name for quick access"
    },
    "transaction_date": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of transaction"
    },
    "items": {
      "type": "array",
      "description": "Products purchased in this transaction",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string"
          },
          "product_name": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "unit_price": {
            "type": "number"
          },
          "total": {
            "type": "number"
          }
        }
      }
    },
    "total_amount": {
      "type": "number",
      "description": "Total transaction amount"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "credit_card",
        "debit_card",
        "cash",
        "digital_wallet"
      ],
      "description": "Payment method used"
    },
    "status": {
      "type": "string",
      "enum": [
        "completed",
        "pending",
        "cancelled",
        "refunded"
      ],
      "default": "completed",
      "description": "Transaction status"
    },
    "is_anomaly": {
      "type": "boolean",
      "default": false,
      "description": "Flagged as anomalous transaction"
    }
  },
  "required": [
    "transaction_id",
    "customer_id",
    "transaction_date",
    "total_amount"
  ]
}